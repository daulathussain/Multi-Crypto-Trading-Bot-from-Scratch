# REQUIRED: Your private key (never share this!)
PRIVATE_KEY=

# REQUIRED: Polygon RPC URL
# Get free RPC from: https://polygon.llamarpc.com or https://rpc.ankr.com/polygon
POLYGON_RPC_URL=https://rpc.ankr.com/polygon/

# Trading Parameters
MIN_PROFIT_PERCENTAGE=1          # Minimum profit % to execute trade - REDUCED to find more opportunities
TRADE_AMOUNT=1                  # Amount to trade per opportunity (in base token) - REDUCED for safer trades
SLIPPAGE_TOLERANCE=3.0             # Slippage tolerance in % - INCREASED for volatile markets
CHECK_INTERVAL=90000               # Price check interval in milliseconds (90000 = 1.5 minutes) - INCREASED to reduce failed trades

# Safety Features
SIMULATION_MODE=false               # Set to 'true' for safe testing, 'false' for live trading

# Gas Management
MAX_GAS_PRICE=100                  # Maximum gas price in gwei
GAS_LIMIT=300000                   # Gas limit for transactions

# Risk Management
MAX_TRADE_SIZE=1000               # Maximum trade size
MAX_DAILY_TRADES=50               # Maximum trades per day
STOP_LOSS_PERCENTAGE=5.0 

# Debugging
DEBUG_MODE=false                   # Enable debug logging
LOG_TRADES=true                   # Log all trades to file